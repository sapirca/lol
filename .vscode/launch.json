{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Chat App",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/controller/chat_app.py",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Debug Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}