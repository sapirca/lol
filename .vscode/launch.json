{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Chat App",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/ui/tkinter/chat_app.py",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Debug Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:3001", // Ensure this matches your app's port
            "webRoot": "${workspaceFolder}/ui/next-lol-js",
            "sourceMaps": true, // Ensure source maps are enabled
            "trace": true, // Enable tracing to debug debugger issues
            "skipFiles": [ "<node_internals>/**" ] // Skip Node.js internals
        }
    ]
}